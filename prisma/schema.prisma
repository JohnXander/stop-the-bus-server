generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String @unique
  imgUrl   String
  Game     Game[]
}

model Game {
  id       Int        @id @default(autoincrement())
  user     User       @relation(fields: [userId], references: [id])
  userId   Int
  Team     Team[]
  Category Category[]
  Round    Round[]
}

model Team {
  id      Int      @id @default(autoincrement())
  name    String
  players String[]
  game    Game     @relation(fields: [gameId], references: [id])
  gameId  Int
}

model Category {
  id     Int    @id @default(autoincrement())
  name   String @unique
  game   Game   @relation(fields: [gameId], references: [id])
  gameId Int
}

model Round {
  id     Int    @id @default(autoincrement())
  letter String
  game   Game   @relation(fields: [gameId], references: [id])
  gameId Int
  Card   Card[]
}

model Card {
  id      Int    @id @default(autoincrement())
  word    String
  type    String
  imgUrl  String
  round   Round  @relation(fields: [roundId], references: [id])
  roundId Int
}
